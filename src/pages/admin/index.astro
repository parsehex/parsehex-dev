---
import Layout from '../../layouts/Layout.astro';

// The email is attached to locals by the middleware
const email = Astro.locals.userEmail || 'Unknown User';

export const prerender = false;
---

<Layout title="Admin Dashboard">
	<main class="min-h-screen flex items-center justify-center bg-gray-100">
		<div class="bg-white p-8 rounded-lg shadow-md border border-gray-200">
			<h1 class="text-2xl font-bold mb-4 text-center text-gray-800">Admin Dashboard</h1>
			<p class="text-lg text-gray-600">
				Welcome, <span class="font-semibold text-blue-600">{email}</span>
			</p>
		</div>
	</main>
</Layout>
