---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to ParseHex">
	<main class="min-h-screen flex items-center justify-center bg-gray-50">
		<div class="text-center">
			<h1 class="text-4xl font-extrabold text-gray-900 mb-4">Welcome to parsehex.dev</h1>
			<p class="text-lg text-gray-600 mb-8">A personal media portfolio playground.</p>

			<div class="space-x-4">
				<a href="/admin" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition">
					Go to Admin
				</a>
			</div>
		</div>
	</main>
</Layout>
